<!DOCTYPE html>
<html>
    <head>
        <title>RateCamp</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        <nav class= "navbar navbar-expand-lg bg-light">
            <a class="navbar-brand" href="/">RateCamp</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <% if(!currentUser){ %>
                    <li>
                        <a href="/login" class="nav-link">Sign in</a>
                    </li>
                    <li>
                        <a href="/register" class="nav-link">Sign up</a>
                    </li>
                    <% } else { %>
                    <li>
                        <a class="nav-link">Signed in as <%= currentUser.username %></a>
                    </li>
                    <li>
                        <a href="/logout" class="nav-link">Logout</a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </nav>
        <div class="container">
            <% if(errorMessage && errorMessage.length > 0) { %>
            <div class="alert alert-danger" role="alert"><%= errorMessage %></div>
            <% } %>
            <% if(succesMessage && succesMessage.length > 0) { %>
            <div class="alert alert-success" role="alert"><%= succesMessage %></div>
            <% } %>
        </div>
        
        