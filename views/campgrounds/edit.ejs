<% include ../partials/header %>
<div class="container">
    <div class="row  justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit a <%= campgrounds.name %></h1>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <form action="/campgrounds/<%= campgrounds._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="campground[name]" value="<%= campgrounds.name %>" id="name">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="campground[image]" value="<%= campgrounds.image %>" id="image">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="campground[description]" value="<%= campgrounds.description %>" id="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>               
        </div>
    </div>
</div>
<% include ../partials/footer %>